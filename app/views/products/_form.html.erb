<%= form_for @product, class: "form-group" do |f| %>  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %><%= t(".error")%></h2>
      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name ,class: "form-control"%>
  </div>

  <div>
      <%= f.label :catergory %>
      <%= f.collection_select :catergory_id, Catergory.all, :id, :name,{include_blank: t(".select_type")}, {class: "form-control"}  %>
  </div>

  <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price ,class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :amout %>
    <%= f.number_field :amout,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image,class: "form-control mb-1" %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
      <%= f.select :status, Product.statuses.keys.to_a,{include_blank: t(".select_type")}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :discount %>
    <%= f.number_field :discount , class: "form-control"%>
  </div>
  <div class="col-md-6 col-md-offset-10">
    <%= f.submit t("products.form.submit"), class: "btn btn-primary" %>
    <%= link_to t("products.form.show"), @product, class: "btn btn-primary" %>
    <%= link_to t("products.form.back"), products_path, class: "btn btn-primary" %>
  </div>
<% end %>


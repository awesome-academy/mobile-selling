<% provide :title, t(".all_product") %>
  <div><%= link_to t(".new"), new_product_path , class: "btn btn-primary" %></div>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t ".name" %></th>
      <th scope="col"><%= t ".color" %></th>
      <th scope="col"><%= t ".price" %></th>
      <th scope="col"><%= t ".amout" %></th>
      <th scope="col"><%= t ".image" %></th>
      <th scope="col"><%= t ".status" %></th>
      <th scope="col"><%= t ".discount" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.color %></td>
        <td><%= product.price %></td>
        <td><%= product.amout %></td>
        <td><%= image_tag product.image_url, width: "100%" if product.image.present? %></td>
        <td><%= product.status %></td>
        <td><%= product.discount %></td>
        <td><%= link_to t(".show"), product , class: "btn btn-primary" %></td>
        <td><%= link_to t(".edit"), edit_product_path(product), class: "btn btn-primary" %></td>
        <td><%= button_to t(".destroy"), product, method: :delete, data: { confirm: t(".sure?") }, :class=>"btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<<% provide :title, t(".all_Cart") %>

<h1><%= t(".cart")%></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= link_to t".show", cart %></td>
        <td><%= link_to t".edit", edit_cart_path(cart) %></td>
        <td><%= link_to t".destroy", cart, method: :delete, data: { confirm: t".sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t".New", new_cart_path %>
